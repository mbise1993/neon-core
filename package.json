{
  "name": "neon",
  "version": "0.1.0",
  "description": "A complete app development framework",
  "author": {
    "name": "Matt Bise",
    "url": "https://github.com/mbise1993"
  },
  "license": "MIT",
  "scripts": {
    "reinstall": "rimraf ./node_modules && npm install",
    "clean": "rimraf ./dist",
    "build:neon": "tsc",
    "build:test-utils": "tsc --project tsconfig.test-utils.json",
    "build": "npm run clean && npm run build:neon && npm run build:test-utils",
    "test": "jest --watch",
    "prepublishOnly": "npm run reinstall && npm run build"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "mnemonist": "^0.30.0",
    "typescript": "^3.5.3",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "copyfiles": "^2.1.1",
    "eslint": "^6.2.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2"
  }
}
